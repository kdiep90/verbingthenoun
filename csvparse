<?php
	$csv = readCSV('verbthenoun.csv');
	
	while ($csv) {
		
		$line = array_shift($csv);
		if (strtolower($line[0]) == 'endfile') {
			break;
		}				
		else if (strtolower($line[0]) != 'endfile') {
			$verb          = $line[1];
			$noun          = $line[2];
			echo "$verb;$nbsp;$noun";
		}
		
	}
?>
